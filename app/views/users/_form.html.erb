<%= form_for @user, local: true do |f| %>
    <%= render 'shared/error_messages' %>

    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "User Name" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>

    <div class="form-group">
      <%= f.select :gender, [ 'Male', 'Female', 'Prefer not to answer' ], :prompt => 'Select Gender'%>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-dark" %>

<% end %>

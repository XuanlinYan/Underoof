<div class="container">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                </tr>
            </thead>

            <tbody>
                <%  @users.each do |p| %>
                    <tr>
                        <td><%= p.name %></td>
                        <td><%= p.email %></td>
                        <td><%= p.gender %></td>
                    </tr>
                <% end %> 
            </tbody>
        </table>
  </div>
</div>
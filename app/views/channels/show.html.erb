<div class="row">
  <div class="col-sm-2">
    <div class="d-flex justify-content-between">
      <h6>Channels</h6>
      <%= link_to fa_icon("plus"), new_channel_path %>
    </div>

    <% Channel.all.each do |channel| %>
      <div>
        <%= link_to channel.name, channel %>
        <% if current_user.channels.include?(channel) %>
          <%= link_to fa_icon("times"), channel_channel_user_path(channel), method: :delete %>
        <% end %>
      </div>
    <% end %>

    <hr/>

    <div class="d-flex justify-content-between">
      <h6>User</h6>
    </div>
    <% @channel.users.each do |user| %>
      <div>
        <%= user.name %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-10">
    <%= render @channel.messages %>

    <% if current_user.channels.include?(@channel) %>
      <%= form_with model: [@channel, Message.new] do |form| %>
        <%= form.text_field :body, class: "form-control" %>
      <% end %>
    <% else %>
      <%= link_to "Join #{@channel.name}", channel_channel_user_path(@channel), method: :post %>
    <% end %>
  </div>
</div>


<div class="bg-img">
    <div class="col-sm-4">
        <%= form_with(url: signin_path, scope: :session, local: true) do |f| %>
            <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            <%= f.submit "Sign in", class: "btn btn-dark col" %>
        <% end %>
    </div>
</div>
<div class="container">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>min price</th>
                    <th>max price</th>
                    <th>start date</th>
                    <th>end date</th>
                    <th>pet</th>
                </tr>
            </thead>

            <tbody>
                <%  @preferences.each do |p| %>
                    <tr>
                        <td><%= p.user.name %></td>
                        <td><%= p.user.email %></td>
                        <td><%= p.user.gender %></td>
                        <td><%= p.min_price %></td>
                        <td><%= p.max_price %></td>
                        <td><%= p.start_date %></td>
                        <td><%= p.end_date %></td>
                        <td><%= p.pet %></td>
                    </tr>
                <% end %> 
            </tbody>
        </table>
    </div>
</div>